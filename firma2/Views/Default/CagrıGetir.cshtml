@model firma2.Models.Entity.CAGRIFIRMA
@{
    ViewBag.Title = "CagrıGetir";
    Layout = "~/Views/Shared/firmalayout.cshtml";
}

<h2>Çagrı Düzenleme Sayfası </h2>
<br />
@using (Html.BeginForm("CagriDuzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x=> x.ID)
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.KONU, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.ACIKLAMA, 10, 4, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Çağrı Düzenle</button>

}

